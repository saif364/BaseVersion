@model Address

@{
    ViewData["Title"] = "Address Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Address</h4>
<hr />

<div class="row">
    <div class="col-12 col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Street</dt>
            <dd class="col-sm-8">@Model.Street</dd>

            <dt class="col-sm-4">City</dt>
            <dd class="col-sm-8">@Model.City</dd>

            <dt class="col-sm-4">State</dt>
            <dd class="col-sm-8">@Model.State</dd>

            <dt class="col-sm-4">Postal Code</dt>
            <dd class="col-sm-8">@Model.PostalCode</dd>

            <dt class="col-sm-4">Country</dt>
            <dd class="col-sm-8">@Model.Country</dd>

            <dt class="col-sm-4">Is Primary</dt>
            <dd class="col-sm-8">@Model.IsPrimary</dd>

            <dt class="col-sm-4">Notes</dt>
            <dd class="col-sm-8">@Model.Notes</dd>
        </dl>
    </div>
</div>

<div class="form-group mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
